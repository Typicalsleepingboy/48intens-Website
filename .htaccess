RewriteEngine On
RewriteBase /

# Menghilangkan index.html
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^(.*)index\.html$ /$1 [R=301,L]

# Menghilangkan about.html
RewriteCond %{THE_REQUEST} /about\.html [NC]
RewriteRule ^(.*)about\.html$ /$1about [R=301,L]

# Mengarahkan ulang ke file yang sesuai tanpa .html di URL
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)/$ $1.html [L]
